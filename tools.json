{
  "tools": [
    {
      "name": "api-health",
      "description": "Checks the health and availability of Veracode API endpoints",
      "category": "veracode",
      "params": []
    },
    {
      "name": "dynamic-findings",
      "description": "Get runtime vulnerabilities from DYNAMIC analysis scans (auth/session flaws, authorization bypasses, CSRF, clickjacking, etc.)",
      "params": [
        {
          "name": "application_path",
          "type": "string",
          "isRequired": true,
          "description": "Absolute path to the application workspace"
        },
        {
          "name": "app_profile",
          "type": "string",
          "isRequired": false,
          "description": "Application name (auto-detected if not provided)"
        },
        {
          "name": "severity",
          "type": "number",
          "isRequired": false,
          "validation": {
            "min": 0,
            "max": 5
          },
          "description": "Exact severity (0=Info, 1=VeryLow, 2=Low, 3=Med, 4=High, 5=VeryHigh)"
        },
        {
          "name": "severity_gte",
          "type": "number",
          "isRequired": false,
          "validation": {
            "min": 0,
            "max": 5
          },
          "description": "Minimum severity (0-5)"
        },
        {
          "name": "cwe_ids",
          "type": "array",
          "isRequired": false,
          "description": "Filter by CWE IDs (e.g., [89, 79] for SQLi and XSS)"
        },
        {
          "name": "size",
          "type": "number",
          "isRequired": false,
          "validation": {
            "min": 1,
            "max": 500
          },
          "description": "Results per page (1-500, default 10)"
        },
        {
          "name": "page",
          "type": "number",
          "isRequired": false,
          "validation": {
            "min": 0,
            "max": 500
          },
          "description": "Page number (0-based, default 0)"
        },
        {
          "name": "violates_policy",
          "type": "boolean",
          "isRequired": false,
          "description": "Filter by policy violation status"
        },
        {
          "name": "include_mitigations",
          "type": "boolean",
          "isRequired": false,
          "description": "Include mitigation details (default false)"
        }
      ]
    },
